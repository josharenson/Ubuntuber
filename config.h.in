// Qt
#include <QtCore/QCoreApplication>
#include <QtCore/QDir>

inline bool isClick() {
#ifdef CLICK_MODE
    return true;
#else
    return false;
#endif
}

inline bool isRunningInstalled() {
    static bool installed = (QCoreApplication::applicationDirPath() ==
                             QDir(("@CMAKE_INSTALL_ROOT@/@CMAKE_INSTALL_BINDIR@")).canonicalPath());
    return installed;
}

inline QString qtberAppDirectory() {
    if (isClick()) {
        return QDir::currentPath();
    } else if (isRunningInstalled()) {
        return QString("@CMAKE_INSTALL_ROOT@/@APP_DIR@/");
    } else {
        return QString("@CMAKE_SOURCE_DIR@/");
    }
}

inline QString qtberAppImportDirectory() {
    if (isClick()) {
        return QDir::currentPath() + "/@PLUGIN_BASE@";
    } else {
        return "@CMAKE_INSTALL_ROOT@/@PLUGIN_BASE@";
    }
}

inline QString sourceQml() {
    static QString qmlFile("qtber.qml");
    if (isClick()) {
        return QDir::currentPath() + "/" + qmlFile;
    } else {
        return qmlFile;
    }
}
